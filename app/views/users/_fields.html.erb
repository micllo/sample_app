<!-- 显示错误提示信息
（注：必须创建相同路径下的文件或文件夹才能匹配到）-->
<%= render 'shared/error_messages' %>

<!-- 'label' 默认将首字母大写显示：Name -->
<%= f.label :name %>
<%= f.text_field :name %> 

<%= f.label :email %>
<%= f.text_field :email %> 

<%= f.label :password %>
<%= f.password_field :password %>
		
<!-- 'label' 将默认显示的'Password_confirmation'改成了'Confirmation' -->
<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation %>